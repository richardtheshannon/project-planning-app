{
  "name": "project-planning-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "prisma db push --accept-data-loss",
    "db:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:data": "node ./scripts/migrate-data.js",
    "db:baseline": "prisma migrate resolve --applied 20250817153122_feat_dual_theming",
    "db:fix": "prisma migrate resolve --rolled-forward 20250801023706_init_tasks_and_contacts",
    "start:prod": "npm run start",
    "postinstall": "prisma generate",
    "prepare": "husky || true",
    "db:status": "prisma migrate status",
    "db:validate": "node ./scripts/validate-migration.js",
    "db:backup": "node ./scripts/backup-database.js",
    "db:backup:list": "dir backups\\*.sql",
    "dev:clean": "rmdir /s /q .next 2>nul || echo Cache cleaned",
    "dev:fresh": "npm run dev:clean && npm run dev",
    "predeploy:check": "npm run db:validate && npm run db:backup",
    "docs:structure": "node ./scripts/analyze-structure.js"
  },
  "overrides": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.7.0",
    "@prisma/engines": "5.7.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.8",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "formidable": "^3.5.4",
    "lucide-react": "^0.292.0",
    "mime-types": "^3.0.1",
    "next": "13.5.6",
    "next-auth": "4.24.5",
    "next-themes": "^0.4.6",
    "nodemailer": "^6.10.1",
    "prisma": "^5.7.0",
    "react": "^18.2.0",
    "react-day-picker": "^9.8.1",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.2",
    "recharts": "^3.1.2",
    "sonner": "^2.0.6",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/formidable": "^3.4.5",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "13.5.6",
    "husky": "^9.1.7",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "postcss": "^8.4.0",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0"
  }
}
